<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity$LuasTimesFragment">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/luas_purple" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/tab_red_line"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/red_line_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <org.thecosmicfrog.luasataglance.view.SpinnerCardView
                        android:id="@+id/red_line_spinner_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/red_line_swiperefreshlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:id="@+id/red_line_scrollview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingBottom="80dp">

                                <org.thecosmicfrog.luasataglance.view.StatusCardView
                                    android:id="@+id/red_line_statuscardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="12dp" />

                                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                                    android:id="@+id/tutorialcardview_select_stop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                                    android:id="@+id/tutorialcardview_notifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                                    android:id="@+id/tutorialcardview_favourites"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp" />

                                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                                    android:id="@+id/red_line_inbound_stopforecastcardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />

                                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                                    android:id="@+id/red_line_outbound_stopforecastcardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />
                            </LinearLayout>
                        </ScrollView>
                    </android.support.v4.widget.SwipeRefreshLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_green_line"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/green_line_progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="true" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <org.thecosmicfrog.luasataglance.view.SpinnerCardView
                        android:id="@+id/green_line_spinner_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/green_line_swiperefreshlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ScrollView
                            android:id="@+id/green_line_scrollview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:paddingBottom="80dp">

                                <org.thecosmicfrog.luasataglance.view.StatusCardView
                                    android:id="@+id/green_line_statuscardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp" />

                                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                                    android:id="@+id/green_line_inbound_stopforecastcardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />

                                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                                    android:id="@+id/green_line_outbound_stopforecastcardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />
                            </LinearLayout>
                        </ScrollView>
                    </android.support.v4.widget.SwipeRefreshLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="6dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_favourites"
                app:rippleColor="@color/favourites_yellow" />
        </RelativeLayout>
    </TabHost>
</LinearLayout>
